<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
              fx:id = "root1" styleClass="border" fx:controller = "MyController">

	<center>

    <VBox fx:id = "vbox" alignment="CENTER" spacing="10"> 
            <ImageView FitWidth = "700" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="/images/logo.png" />
                    </image>
             </ImageView>
            <!-- <Text fx:id = "welcomeText" text="Welcome to Three Card Poker"/> -->
            <HBox fx:id = "hbox" alignment="CENTER" spacing="10"> 
                <Button fx:id = "playBtn" styleClass="button" text = "Play" onAction = "#pressPlay"/>
                <Button fx:id = "exitBtn" styleClass="button" text = "Exit" onAction = "#pressExit"/>
            </HBox>
     </VBox>
    </center>

	
</BorderPane>
